{% extends 'base.html.twig' %}

{% block title %}{{ "register"|trans }}{% endblock %}

{% block body %}
<div class="register-wrapper">
    <h1>{{ "register"|trans }}</h1>

    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}

    <div class="inputs-wrapper">
        {{ form_row(registrationForm.email, {
            'attr': {'placeholder': 'form.email.label'|trans }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            'attr': {'placeholder': 'form.password.label'|trans }
        }) }}
    </div>
        <input type="checkbox" id="referent" name="referent" />
	
		<button type="submit" class="btn">{{ "register.account"|trans }}</button>

{{ form_end(registrationForm) }}

</div>
{% endblock %}

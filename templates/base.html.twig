<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/AirMe-logo.png') }}">
    <title>
        {% block title %}
        {% endblock %}
    </title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('assets/js/animation.js') }}"></script>
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>
<body>
{% for label, messages in app.flashes %}
    <div class="flash-{{ label }}">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endfor %}

<div class="off-menu">
    <div class="off-menu-logo"> 
        <img src="{{ asset('assets/img/AirMe-logo.png') }}" alt="AirMe logo" />
    </div>    
    <ul>
        <li><a href="{{ path('app_login') }}">{{ 'login'|trans }}</a></li>
        <li><a href="{{ path('app_register') }}">{{ 'register'|trans }}</a></li>
        <li><a href="{{ path('app_logout') }}">{{ 'logout'|trans }}</a></li>
    </ul>
</div>

	<div class="nav-wrapper">
		<div class="nav-logo-wrapper">
    		<img class="nav-logo" src="{{ asset('assets/img/AirMe-logo.png') }}" alt="AirMe logo" />
		</div>
    	<nav>
        	<ul>
            <li><a href="{{ path('app_home') }}">{{ 'home'|trans }}</a></li>
            {% if app.user %}
				{# TODO add a custom logic #}
            {% else %}
                {# <li><p>{{ 'login.not.logged.in'|trans }}</p></li> #}
            {% endif %}
            <li><a href="{{ path('app_login') }}">{{ 'login'|trans }}</a></li>
            <li><a href="{{ path('app_register') }}">{{ 'register'|trans }}</a></li>
            <li><a href="{{ path('app_logout') }}">{{ 'logout'|trans }}</a></li>
        	</ul>
    	</nav>
		<div class="ham-menu">
            <span class="nav-ham-menu-bars"></span>
            <span class="nav-ham-menu-bars"></span>
            <span class="nav-ham-menu-bars"></span>
		</div>
	</div>
{% block body %}{% endblock %}
{% block footer %}{% endblock %}
</body>
</html>

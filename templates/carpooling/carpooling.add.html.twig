{% extends 'base.html.twig' %}

{% block title %}
    {{ 'carpooling.title'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('assets/js/multi-step-form.js')}}"></script>
    <script>
        const seatsInput = document.getElementById('carpooling_seats');
        const seatsCheckbox = document.getElementById('seats');

        seatsCheckbox.addEventListener('change', function() {
            if (this.checked) {
                seatsInput.style.display = 'block';
            } else {
                seatsInput.style.display = 'none';
            }
        });
    </script>
{% endblock %}

{% block body %}
    <h3 class="form-title">{{ 'carpooling.title'|trans }}</h3>

    <div id="form-wrapper">
        {{ form_start(form) }}
        <div class="form-container">
            <div class="form1">
                {{ form_row(form.name, {'attr': {'class': 'required'}}) }}
                {{ form_row(form.description) }}
                <div class="form-btn-wrapper">
                    <div class="previous"><p>{{'form.previous'|trans}}</p></div>
                    <div class="next"><p>{{'form.next'|trans}}</p></div>
                </div>
            </div>

            <div class="form2">
                {{ form_row(form.departureLocation) }}
                {{ form_row(form.arrivalLocation) }}
                {{ form_row(form.departureTime) }}

                <div class="check-box-wrapper">
                    <label for="seats">{{ 'carpooling.available_seats'|trans }}</label>
                    <input type="checkbox" id="seats" name="seats" />
                </div>

                {{ form_row(form.seats, {'style': 'display: none;', 'attr': {'id': 'carpooling_seats'}}) }}


                <div class="form-btn-wrapper">
                    <div class="previous"><p>{{'form.previous'|trans}}</p></div>
                </div>
            </div>

        </div>
        </div> 
        {{ form_end(form) }}
    </div>

    
{% endblock %}


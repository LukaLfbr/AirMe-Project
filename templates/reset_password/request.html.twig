{% extends 'base.html.twig' %}

{% block title %}{{"reset.account.title"|trans}}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{"reset.account.title"|trans}}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{"reset.account.main"|trans}}
            </small>
        </div>

        <button class="btn btn-primary">{{"reset.account.confirm"|trans}}</button>
    {{ form_end(requestForm) }}
{% endblock %}
